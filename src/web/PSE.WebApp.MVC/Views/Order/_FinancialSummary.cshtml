@using PSE.WebApp.MVC.Extensions
@model PSE.WebApp.MVC.Models.OrderTransactionViewModel

<article class="card-body border-top">
    <dl class="row">
        @{
            if (Model.VoucherUsage)
            {
            <dt class="col-sm-10">Subtotal: <span class="float-right text-muted">@Model.Items.Sum(i => i.Quantity) itens</span></dt>
            <dd class="col-sm-2 text-right">
                <strong>@this.FormatCurrency(Model.TotalValue + Model.Discount)</strong>
            </dd>

            <dt class="col-sm-10">Discount: <span class="float-right text-muted">@Model.VoucherCode</span></dt>
            <dd class="col-sm-2 text-danger text-right">
                <strong>@this.FormatCurrency(Model.Discount)</strong>
            </dd>
            }
        }
        <dt class="col-sm-10">Total:</dt>
        <dd class="col-sm-2 text-right">
            <strong class="h5 text-dark">@this.FormatCurrency(Model.TotalValue)</strong>
        </dd>
    </dl>
</article>